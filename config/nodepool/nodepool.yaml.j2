    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-xenial
    min-ready: 1

providers:
  - name: otcallinone
    cloud: otc
    driver: openstack
    launch-timeout: 1200
    boot-timeout: 1200
    image-name-format: 'allinone-{image_name}-{timestamp}'
    diskimages:
      - name: ubuntu-xenial
        config-drive: true
    pools:
      - name: otcallinone
        auto-floating-ip: False
        max-servers: 4
        networks:
          - openlab-net
        labels:
          - name: ubuntu-xenial
            diskimage: ubuntu-xenial
            # flavor-name: 'c2.4xlarge'
            flavor-name: 's2.2xlarge.1'
            key-name: openlab-cicd

