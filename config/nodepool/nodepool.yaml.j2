elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-xenial
    min-ready: 1

providers:
  - name: otcallinone
    cloud: otc
    driver: openstack
    launch-timeout: 1200
    boot-timeout: 1200
    image-name-format: 'allinone-{image_name}-{timestamp}'
    diskimages:
      - name: ubuntu-xenial
        config-drive: true
    pools:
      - name: otcallinone
        auto-floating-ip: False
        max-servers: 4
        networks:
          - openlab-net
        labels:
          - name: ubuntu-xenial
            diskimage: ubuntu-xenial
            # flavor-name: 'c2.4xlarge'
            flavor-name: 's2.2xlarge.1'
            key-name: openlab-cicd

diskimages:
  - name: ubuntu-xenial
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: xenial
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
