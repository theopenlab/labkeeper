#
[gearman]
port = 4730
server = {{ hostvars[groups["gear"][0]].ansible_host }}
check_job_registration=true

[gearman_server]
start = false

[scheduler]
tenant_config = {{ zuul_file_main_yaml_dest }}
log_config = /etc/zuul/scheduler-logging.conf
pidfile = /var/run/zuul-merger/zuul-merger.pid
state_dir = {{ zuul_user_home }}

[statsd]
pidfile = /var/run/zuul-merger/zuul-merger.pid
server = {{ hostvars[groups["statsd"][0]].ansible_host }}

[executor]
finger_port = 17979
log_config = /etc/zuul/executor-logging.conf
private_key_file = {{ zuul_user_home }}/.ssh/id_rsa
workspace_root = {{ zuul_user_home }}/workspace
disk_limit_per_job=1024

[fingergw]
listen_address = {{ hostvars[groups["zuul-fingergw"][0]].ansible_host }}
log_config = /etc/zuul/fingergw-logging.conf
user = {{ zuul_user_name }}

[merger]
git_dir = {{ zuul_user_home }}/git
git_user_email = theopenlab.ci@gmail.com
git_user_name = theopenlab-ci
log_config = /etc/zuul/merger-logging.conf
zuul_url = {{ hostvars[groups["zuul-scheduler"][0]].ansible_host }}

[web]
log_config = /etc/zuul/web-logging.conf
listen_address=0.0.0.0
sql_connection_name=mysql
status_url=http://{{ zuul_public_ip }}/

[zookeeper]
hosts = {{ hostvars[groups["zookeeper"][0]].ansible_host }}

[connection github]
driver=github
server=github.com
user=zuul
sshkey={{ zuul_user_home }}/.ssh/id_rsa
app_id={{ github_app_id }}
app_key={{ zuul_user_home }}/openlab-app-key.pem
webhook_token={{ github_webhook_token }}
verify_ssl=false

[connection openstack-git]
driver=git
baseurl=https://git.openstack.org/

[connection mysql]
driver=sql
dburi=mysql+pymysql://zuul:zuul@127.0.0.1/zuul
