  - host: '{{ hostvars[host].ansible_host }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-xenial
    min-ready: 1

providers:
  - name: fakeprovider
    cloud: fake
    driver: openstack
    launch-timeout: 1200
    boot-timeout: 1200
    image-name-format: 'fake-{image_name}-{timestamp}'
    diskimages:
      - name: ubuntu-xenial
        config-drive: true
    pools:
      - name: ubuntu-xenial
        auto-floating-ip: False
        max-servers: 100
        labels:
          - name: ubuntu-xenial
            diskimage: ubuntu-xenial
            flavor-name: 'small'
            boot-from-volume: True
            volume-size: 100

diskimages:
  - name: ubuntu-xenial
    pause: true
    elements:
      - ubuntu
      - vm
      - simple-init
      - nodepool-base
      - cache-devstack
      - initialize-urandom
      - growroot
      - infra-package-needs
